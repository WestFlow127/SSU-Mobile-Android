<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#d5d7e9"
    tools:context="co.app.ssumobile.ssumobile_android.activity.DirActivity">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/fragment_container">
        </FrameLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dir_button_send"
            android:onClick="testConnection"
            android:id="@+id/button2"
            android:background="@drawable/roundedbutton"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />

        <Button
            android:layout_width="175dp"
            android:layout_height="45dp"
            android:text="@string/contact_button"
            android:background="@drawable/roundedbutton"
            android:id="@+id/contact_button"
            android:layout_alignTop="@id/contact_button"
            android:layout_alignParentStart="true" />

        <Button
            android:layout_width="175dp"
            android:layout_height="45dp"
            android:text="@string/contact_button"
            android:background="@drawable/roundedbutton"
            android:id="@+id/contact_button2"
            android:layout_below="@+id/contact_button"
            android:layout_alignParentStart="true" />



</RelativeLayout>
